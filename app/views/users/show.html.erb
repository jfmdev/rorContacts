<% provide(:title, @user.name) %>

<p id="notice"><%= notice %></p>

<h1 class="text-center">User Details</h1>

<div class="row">
  <div class="col-sm-6 text-right">
    <strong>Name:</strong>
  </div>
  <div class="col-sm-6 text-left">
    <%= @user.name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 text-right">
    <strong>Email:</strong>
  </div>
  <div class="col-sm-6 text-left">
    <%= @user.email %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 text-right">
    <strong>Password diggest:</strong>
  </div>
  <div class="col-sm-6 text-left">
    <%= @user.password_diggest %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 text-right">
    <strong>Admin:</strong>
  </div>
  <div class="col-sm-6 text-left">
    <%= @user.admin %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-sm-6 text-right">
    <%= link_to 'Back', users_path, :class => "btn btn-default" %>
  </div>
  <div class="col-sm-6 text-left">
    <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-primary" %>
  </div>
</div>
